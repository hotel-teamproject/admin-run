# ============================================
# Docker 환경 변수 설정 예시
# ============================================

# MongoDB 설정
MONGO_INITDB_DATABASE=hotel-project
MONGO_URI=mongodb://hotel-mongo:27017/hotel-project
MONGODB_URI=mongodb://hotel-mongo:27017/hotel-project

# Backend 서버 설정
PORT=4000
NODE_ENV=development

# JWT 인증 설정 (프로덕션에서는 반드시 변경하세요!)
JWT_SECRET=your-secret-key-here-change-in-production
JWT_EXPIRES_IN=1h
REFRESH_TOKEN_SECRET=your-refresh-secret-key-here-change-in-production
REFRESH_EXPIRES_IN=7d

# CORS 설정
FRONT_ORIGIN=http://localhost:5173

# Frontend 설정
VITE_API_URL=http://localhost:4000/api
